#control fan file location 
sudo nano /boot/firmware/config.txt

#add the following to the file
[pi5]
dtparam=fan_temp0=55000,fan_temp0_hyst=5000,fan_temp0_speed=100
dtparam=fan_temp1=60000,fan_temp1_hyst=5000,fan_temp1_speed=150
dtparam=fan_temp2=65000,fan_temp2_hyst=5000,fan_temp2_speed=200
dtparam=fan_temp3=70000,fan_temp3_hyst=5000,fan_temp3_speed=255
[all]
